

<div id="main-wrapper">
     <%= render :partial=>'ride/header'%>
      <div class="rq-page-content">
        <div class="rq-content-block">
          <div class="rq-title-container bredcrumb-title small">
            <div class="container">
              <h2 class="rq-title">My Conversation</h2>
              <ol class="breadcrumb rq-subtitle">
                <li><a href="/ride/index">Home</a></li>
                <li class="active">all Conversation</li>
              </ol>
            </div>
          </div>
          <div class="rq-registration-content-single small-bottom-margin"> <!-- start of registration portion-->
            <div class="container">
              <div class="rq-login-form no-border">
                <div class="row">		
		            <div class="col-md-6 col-md-offset-3 compose-msg">		            			 
						<%= form_tag :action=>'create',method: :post do%>
			                <div class="form-group">
			                  <label class="col-sm-2" for="inputTo">To</label>
			                  <div class="col-sm-10">
			                    <%= text_field_tag :user_id,@recipients.id%>
			                  </div>
			                </div>
			                <div class="form-group">
			                  <label class="col-sm-2" for="inputSubject">Subject</label>
			                  <div class="col-sm-10">
			                  	<%= text_field_tag :subject,nil, placeholder: "subject",class: 'form-control'%>
			                  </div>
			                </div>
			                <div class="form-group">
			                  <label class="col-sm-12" for="inputBody">Message</label>
			                  <div class="col-sm-12">
			                  	<%= text_area_tag :body,nil, placeholder: "message",class: 'form-control',rows: '10'%>
			                  </div>
			                  <%=submit_tag "Send",class:'btn btn-primary'%>
			                </div>
			            <%end%>
		            </div>
		            <div class="col-md-3">
		            	
		            </div>
				</div>
              </div>             
            </div>
          </div><!--  end of registration form portin -->
        </div>
      </div>
</div> <!-- end #main-wrapper -->
