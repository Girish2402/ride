<div id="main-wrapper">
    <%= render :partial=>'ride/header'%>
    <div class="rq-page-content">
       <div class="rq-content-block">
          <div class="rq-title-container bredcrumb-title small">
            <div class="container">
              <h2 class="rq-title">Forgot</h2>
              <ol class="breadcrumb rq-subtitle">
                <li><a href="#">Home</a></li>
                <li class="active">Forgot Password </li>
              </ol>
            </div>
          </div>
          <div class="rq-registration-content-single"> <!-- start of Forgot password form portion -->
            <div class="container">
              <h4>Forgot Your Password?</h4>
              <p class="subtitle">Enter Your Email-id we will send change password instruction via mail</p>
              <div class="rq-login-form">
               <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= devise_error_messages! %>
                    <%= f.hidden_field :reset_password_token %>
                    <div class="row">
                      <div class="col-md-5">
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                        <% end %>
                        <%= f.password_field :password, autofocus: true, autocomplete: "off",class:'rq-form-control',placeholder:'Password' %>
                      </div>
                      <div class="col-md-5">
                        <%= f.password_field :password_confirmation, autocomplete: "off",class:'rq-form-control',placeholder:'Re- password' %>
                      </div>
                      <div class="col-md-2">
                        <button type="submit" class="rq-btn rq-btn-primary fluid border-radius">Login <i class="arrow_right"></i></button>                        
                      </div>
                      <div class="col-md-12">
                          <div class="remember-me">                         
                            <span class="forgotpass">
                              <br>
                             <%= render "devise/shared/links" %>
                            </span>
                          </div>
                      </div>
                    </div>
                <% end %>
           
              </div> <!-- end login div -->
            </div>
          </div> <!-- end of forgot password form portion -->
       </div>
    </div>
</div> <!-- end #main-wrapper -->






