
<div id="main-wrapper">
    <%= render :partial=>'ride/header'%>
    <div class="rq-page-content">
       <div class="rq-content-block">
          <div class="rq-title-container bredcrumb-title small">
            <div class="container">
              <h2 class="rq-title">Forgot</h2>
              <ol class="breadcrumb rq-subtitle">
                <li><a href="#">Home</a></li>
                <li class="active">Forgot Password </li>
              </ol>
            </div>
          </div>
          <div class="rq-registration-content-single"> <!-- start of Forgot password form portion -->
            <div class="container">
              <h4>Forgot Your Password?</h4>
              <p class="subtitle">Enter Your Email-id we will send change password instruction via mail</p>
              <div class="rq-login-form">
               <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="row">
	                    <div class="col-md-5">
	                      <%= f.email_field :email, autofocus: true,class:'rq-form-control',placeholder:'Your email'  %>
	                    </div>
	                    <div class="col-md-2">
	                      <button type="submit" class="rq-btn rq-btn-primary fluid border-radius">Login <i class="arrow_right"></i></button>	                      
	                    </div>
	                    <div class="col-md-12">
	                        <div class="remember-me">	                        
		                        <span class="forgotpass">
		                          <br>
								  <%= render "devise/shared/links" %>
		                        </span>
	                        </div>
                    	</div>
                    </div>
                <% end %>
           
              </div> <!-- end login div -->
            </div>
          </div> <!-- end of forgot password form portion -->
       </div>
    </div>
</div> <!-- end #main-wrapper -->
















